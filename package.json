{
  "name": "website-react",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "postcss-cli": "^6.1.2",
    "postcss-custom-properties": "^9.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "prettier": "prettier --write src/**/*.*",
    "postbuild": "react-snap && postcss --use postcss-custom-properties --replace build/**/*.css; node ./src/htaccess.js"
  },
  "devDependencies": {
    "husky": "^2.6.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "react-snap": "^1.23.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
