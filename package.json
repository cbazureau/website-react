{
  "name": "website-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "postcss-cli": "^4.1.1",
    "postcss-custom-properties": "^6.2.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-scripts": "1.0.14"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "prettier": "prettier --write src/**/*.*",
    "postbuild": "react-snap && postcss --use postcss-custom-properties --replace build/**/*.css; node ./src/htaccess.js"
  },
  "devDependencies": {
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "react-snap": "^1.23.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
